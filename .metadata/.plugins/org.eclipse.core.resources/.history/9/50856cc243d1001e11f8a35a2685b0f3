package com.ayshu.gct.spring.aop;

import org.aspectj.lang.JoinPoint;
import org.aspectj.lang.annotation.Aspect;
import org.aspectj.lang.annotation.Before;
import org.springframework.stereotype.Component;

@Aspect
@Component
public class LoggerAOP {

//"execution(* com.javatpoint.service.EmployeeService.*(..)) and args(empId, fname, sname)")  
	@Before(value="execution(*com.ayshu.gct.spring.aop.concept.controller.EmployeeController.*(..)")
	public void beforeMethodLog(JoinPoint joinPoint) {
		System.out.println("Before method " + joinPoint.getSignature() + ": ");
	}
}
